# Application Settings
FLASK_ENV=production
SESSION_SECRET=replace_with_secure_random_string
DOMAIN_NAME=example.com

# Database Configuration
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=invoicing
DATABASE_URL=postgresql://dbuser:secure_password@db:5432/invoicing

# Email Settings (SMTP)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
MAIL_FROM=your_email@example.com
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# Email Settings (Microsoft Graph API)
MS_CLIENT_ID=your_microsoft_client_id
MS_CLIENT_SECRET=your_microsoft_client_secret
MS_TENANT_ID=your_microsoft_tenant_id
MS_USER_EMAIL=your_office365_email@example.com

# Mollie Payment API Settings
MOLLIE_API_KEY=your_mollie_api_key
MOLLIE_WEBHOOK_URL=https://example.com/webhook/mollie

# Logging Settings
LOG_LEVEL=ERROR

# Timezone Settings
TZ=Europe/Amsterdam