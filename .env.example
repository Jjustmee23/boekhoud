# Example .env configuration file for Factuur en Administratie Applicatie
# Copy this file to .env and edit the values as needed

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/facturatie

# Application Settings
FLASK_ENV=development  # Set to 'production' for production use
SESSION_SECRET=your_secure_session_secret_key_here
ENABLE_REGISTRATION=False  # Set to True to allow user registration

# Microsoft Graph API (Email)
MS_GRAPH_CLIENT_ID=your_ms_graph_client_id
MS_GRAPH_CLIENT_SECRET=your_ms_graph_client_secret
MS_GRAPH_TENANT_ID=your_ms_graph_tenant_id
MS_GRAPH_SENDER_EMAIL=your_sender_email@example.com

# Mollie Payment API
MOLLIE_API_KEY=your_mollie_api_key