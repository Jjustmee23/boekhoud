# .env bestand voor Docker deployment
# Kopieer dit bestand naar .env en vul de juiste waarden in

#############################
# Basis Configuratie        #
#############################
# Port waarop de applicatie draait
PORT=5000

# Tijdzone instelling
TZ=Europe/Amsterdam

# Python configuratie
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Sessie beveiliging (VERPLICHT WIJZIGEN - genereer met: openssl rand -hex 32)
SESSION_SECRET=verander_dit_in_een_lange_random_string_in_productie

#############################
# Database Configuratie     #
#############################
# PostgreSQL database configuratie 
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=facturatie
DB_PORT=5432

# Volledige database URL (hoeft niet gewijzigd te worden als bovenstaande instellingen gebruikt worden)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

#############################
# Email Configuratie        #
#############################
# Microsoft Graph API (OAuth2) voor Office 365 e-mail
# Zie: https://docs.microsoft.com/en-us/graph/auth-register-app-v2
MS_GRAPH_CLIENT_ID=
MS_GRAPH_CLIENT_SECRET=
MS_GRAPH_TENANT_ID=
MS_GRAPH_SENDER_EMAIL=

# SMTP Instellingen (alternatief voor Microsoft Graph)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_SSL=false
SMTP_USE_TLS=true
EMAIL_FROM=
EMAIL_FROM_NAME=

#############################
# Mollie API Configuratie   #
#############################
# Mollie API sleutel voor betalingen
MOLLIE_API_KEY=

#############################
# Resource Limieten         #
#############################
# Docker resource limieten (optioneel)
WEB_CPUS=1
WEB_MEMORY=1G
DB_CPUS=1
DB_MEMORY=1G

#############################
# Logging Configuratie      #
#############################
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Maximum logbestand grootte in bytes
LOG_MAX_SIZE=10485760  # 10MB
# Aantal te bewaren logbestanden bij rotatie
LOG_BACKUP_COUNT=5

#############################
# Security Configuratie     #
#############################
# Configuratie voor rate limiting (aantal verzoeken per minuut)
RATE_LIMIT=60
# Tijd in seconden dat een gebruiker wordt geblokkeerd bij te veel mislukte inlogpogingen
LOGIN_BLOCK_SECONDS=300
# Maximum aantal mislukte inlogpogingen voordat een gebruiker wordt geblokkeerd
MAX_LOGIN_ATTEMPTS=5